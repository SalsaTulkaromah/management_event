<%- contentFor('HeaderCss') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<%- contentFor('body') %>
<div class="container-fluid px-4">
  <h4 class="mb-4 fw-bold">DASHBOARD ANALYSIS</h4>

  

  <!-- Summary Card -->
  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card shadow-sm p-3">
        <p class="mb-1 fw-semibold">Jumlah Partisipan</p>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-sm p-3">
        <p class="mb-1 fw-semibold">Jumlah Responden</p>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-sm p-3">
        <p class="mb-1 fw-semibold">Jumlah Event</p>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card shadow-sm p-3">
        <p class="mb-1 fw-semibold">Rata-Rata Nilai CSAT</p>
      </div>
    </div>
  </div>

  <!-- Chart Row -->
  <div class="row g-4">
    <!-- Distribusi Kepuasan Pelanggan -->
    <div class="col-md-4">
      <div class="card p-3 shadow-sm h-100">
        <h6 class="mb-3">Distribusi Kepuasan Pelanggan</h6>
        <canvas id="kepuasanChart" height="200"></canvas>
      </div>
    </div>

    <!-- Perbandingan Nilai CSAT -->
    <div class="col-md-4">
      <div class="card p-3 shadow-sm h-100">
        <h6 class="mb-3">Perbandingan Nilai CSAT Event</h6>
        <canvas id="csatComparisonChart" height="200"></canvas>
      </div>
    </div>

    <!-- Status Approval Partisipan -->
    <div class="col-md-4">
      <div class="card p-3 shadow-sm h-100">
        <h6 class="mb-3">Status Approval Partisipan</h6>
        <canvas id="approvalChart" height="200"></canvas>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script type="text/javascript">
  var role = '<%-event_objectCookie.role%>';
  $(document).ready(function() {
    if (role == "Admin"){
        $('body').show(); // Tampilkan konten jika pengguna adalah admin
    }else{
        window.location.href = "404";
    }
  });
</script>