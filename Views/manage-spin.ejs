<%- contentFor('HeaderCss') %>
<!-- DataTables & SweetAlert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<%- contentFor('body') %>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header container-fluid">
        <div class="row g-2 justify-content-between align-items-center">
          <div class="col-md-auto">
            <h5 class="card-title mb-0">MANAGE SPIN THE WHEEL</h5>
          </div>
          <div class="col-md-auto d-flex align-items-center gap-2" id="exportButtonContainer"></div>
        </div>
      </div>

      <!-- Tabel -->
      <div class="card-body">
        <!-- Custom Controls: Length & Search -->
        <div class="row mb-3">
          <div class="col-md-6" id="customLengthContainer"></div>
          <div class="col-md-6 text-end" id="customSearchContainer"></div>
        </div>

        <!-- Table -->
        <table id="attendanceTable" class="table table-bordered dt-responsive nowrap table-striped text-center align-middle" style="width:100%">
          <thead style="background-color: #3f4f88;" class="text-white">
            <tr>
              <th class="text-center align-middle">EVENT</th>
              <th class="text-center align-middle">NAME</th>
              <th class="text-center align-middle">COMPANY</th>
              <th class="text-center align-middle">E-MAIL</th>
              <th class="text-center align-middle">PHONE NUMBER</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %>
<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<!-- DataTables Export Buttons -->
<script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.colVis.min.js"></script>

<!-- JSZip for Excel Export -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>

<script>
  $(document).ready(function () {
    getSpinList();
  });

  async function getSpinList() {
    const selectedEventId = $('#eventFilter').val(); // Ambil event terpilih
  
    await $.ajax({
      url: "/manage-spin/getSpinList",
      method: "get",
      data: {
        event_id: selectedEventId
      },
      dataType: "json",
      beforeSend: function () {
        $("#preloader_xx").show();
      },
      complete: function () {
        $('#preloader_xx').hide();
      },
      success: function (resp_data) {
        var data = resp_data.data;
  
        const table = $('#attendanceTable').DataTable({
          scrollX: true,
          data: data,
          columns: [
            { data: 'title' },
            { data: 'name' },
            { data: 'company_name' },
            { data: 'email' },
            { data: 'phone' },
          ],
          dom: 'lfrtip', // 
          bDestroy: true
        });
  
        // Bersihkan container tombol/filter
        $('#exportButtonContainer').empty();
  
        // Tambahkan dropdown event filter
        const eventFilterHtml = `
          <select id="eventFilter" class="btn btn-soft-primary" style="width: auto;">
            <option value="">All Events</option>
          </select>
        `;
        $('#exportButtonContainer').append(eventFilterHtml);
  
        // Tambahkan tombol-tombol tambahan
        const buttonGroup = `
          <a href="http://localhost:9000/spin" target="_blank" class="btn btn-soft-success">
            <i class="ri-eye-line me-1"></i> View Spin
          </a>
          <button class="btn btn-soft-warning" onclick="setWinner()">
            <i class="ri-check-double-line me-1"></i> Set Winner
          </button>
          <button class="btn btn-soft-danger" onclick="resetWinner()">
            <i class="ri-refresh-line me-1"></i> Reset Winner
          </button>
        `;
        $('#exportButtonContainer').append(buttonGroup);
  
        // Isi dropdown event secara dinamis
        loadEventFilterOptions(selectedEventId);
  
        // Event change untuk filter
        $('#eventFilter').on('change', function () {
          getSpinList(); // reload dengan event baru
        });
      },
      error: function (request, status, error) {
        console.log('code: ' + request.status + "\n" + 'message: ' + request.responseText + "\n" + 'error: ' + error);
      }
    });
  }  

  async function loadEventFilterOptions(selectedId = '') {
    try {
      const res = await fetch('/event/getEvents', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({}) // kalau butuh kirim parameter bisa ditambahkan di sini
      });
  
      const events = await res.json();
  
      const $eventFilter = $('#eventFilter');
      $eventFilter.empty(); // kosongkan dulu
      $eventFilter.append(`<option value="">All Events</option>`); // default option
  
      events.data.forEach(ev => {
        const selected = ev.id == selectedId ? 'selected' : '';
        $eventFilter.append(`<option value="${ev.id}" ${selected}>${ev.title}</option>`);
      });
  
    } catch (err) {
      console.error('Failed to load events:', err);
    }
  }

  function setWinner() {
    Swal.fire({
      title: '<strong>Set Winner</strong>',
      html:
        `<form id="setWinnerForm" class="text-start">
          <div class="mb-3">
            <label for="winnerName" class="form-label">Name <span class="text-danger">*</span></label>
            <input type="text" id="winnerName" class="form-control" placeholder="Enter name" required>
          </div>
          <div class="mb-3">
            <label for="rollCount" class="form-label">Number of Rolls <span class="text-danger">*</span></label>
            <input type="number" id="rollCount" class="form-control" placeholder="Ex: 3 (participant will be selected on the 3rd roll)" required>
          </div>
        </form>`,
      showCancelButton: true,
      confirmButtonText: 'SET',
      cancelButtonText: 'Cancel',
      focusConfirm: false,
      preConfirm: () => {
        const name = document.getElementById('winnerName').value.trim();
        const rolls = document.getElementById('rollCount').value.trim();
  
        if (!name || !rolls) {
          Swal.showValidationMessage('Please fill in both fields.');
          return false;
        }
  
        return { name, rolls: parseInt(rolls) };
      }
    }).then((result) => {
      if (result.isConfirmed) {
        const { name, rolls } = result.value;
        
        // Kirim data ke backend (contoh endpoint)
        fetch('/manage-spin/set-winner', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ name, rolls })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            Swal.fire('Success', 'Winner has been set!', 'success');
            getSpinList(); // Refresh table jika perlu
          } else {
            Swal.fire('Error', data.message || 'Failed to set winner.', 'error');
          }
        })
        .catch(err => {
          console.error(err);
          Swal.fire('Error', 'An error occurred while setting the winner.', 'error');
        });
      }
    });
  }  
  
  function resetWinner() {
    Swal.fire({
      icon: 'warning',
      title: 'Reset Winner',
      text: 'Apakah kamu yakin ingin mereset semua pemenang?',
      showCancelButton: true,
      confirmButtonText: 'Ya, reset!',
      cancelButtonText: 'Batal'
    }).then((result) => {
      if (result.isConfirmed) {
        // Panggil endpoint resetWinner kalau sudah tersedia
        Swal.fire('Berhasil!', 'Data pemenang telah direset.', 'success');
      }
    });
  }
  
</script>
